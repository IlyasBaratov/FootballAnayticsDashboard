# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_NAME=Football Analytics API
DEBUG=False
VERSION=1.0.0

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
# Format: postgresql+psycopg2://user:password@host:port/database
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/football_analytics

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=True

# ============================================
# API-FOOTBALL CONFIGURATION
# ============================================
# Get your API key from: https://www.api-football.com/
# Free tier: 100 requests/day, 10 requests/minute
# Pro tiers available for higher limits
API_FOOTBALL_KEY=your_api_key_here

# API-Football base URL (v3)
API_FOOTBALL_BASE_URL=https://v3.football.api-sports.io

# Rate limiting (requests per minute)
# Free tier: 10 requests/minute
# Adjust based on your subscription plan
API_FOOTBALL_RATE_LIMIT=10

# Request timeout in seconds
API_FOOTBALL_TIMEOUT=30

# ============================================
# CACHING SETTINGS
# ============================================
# Cache time-to-live in seconds (default: 300 = 5 minutes)
CACHE_TTL_SECONDS=300

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=*
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*
